            <button>User Login</button>
        </a>

        <a class="signin" href="http://localhost:5109/Home/UserRegistration">
            <button>User Registration</button>
        </a>

        <a class="signin" href="http://localhost:5109/Home/AdminLogin">
            <button>Admin Login</button>
        </a>
    </header>

    <!-------------------------------- Form ------------------------------------------------------------->

    <form asp-action="AddStation">
        <div class="form-group">
            <label for="StationId">Station ID:</label>
            <input type="text" id="StationId" name="StationId" asp-for="StationId" required />
        </div>
        <div class="form-group">
            <label for="StationName">Station Name:</label>
            <input type="text" id="StationName" name="StationName" asp-for="StationName" required />
        </div>
        <div class="form-group">
            <label for="RouteId">Route ID:</label>
            <input type="text" id="RouteId" name="RouteId" asp-for="RouteId" required />
        </div>
        <div class="form-group">
            <label for="PreviousStationId">Previous Station ID:</label>
            <input type="text" id="PreviousStationId" name="PreviousStationId" asp-for="PreviousStationId" />
        </div>
        
        <div class="form-group">
            <label for="NextStationId">Next Station ID:</label>
            <input type="text" id="NextStationId" name="NextStationId" asp-for="NextStationId" />
            <button type="submit" class="submit">Add Station</button>
        </div>
    </form>

        

